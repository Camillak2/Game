<Page x:Class="WpfApp1.Pages.Wizard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="#2E8B57"
      Title="Wizard" FontSize="20">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Source="/Images/Fantasy.jpg"
            Grid.Column="0"
            Grid.ColumnSpan="6"
            Grid.Row="0"
            Grid.RowSpan="6"/>
        <TextBlock Text="Create Wizard"
            FontSize="30"
            Grid.Column="2"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
        <TextBlock Text="Name"
            Grid.Column="1"
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
        <TextBox x:Name="NameTB"
            Grid.Column="2"
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="100"
            Height="30"/>
        <TextBlock Text="Strength"
            Grid.Column="1"
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
        <TextBlock x:Name="StrengthResult"
            Grid.Column="2"
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="100"
            Height="30"
            Text="15"/>
        <TextBlock Text="Dexterity"
            Grid.Column="1"
            Grid.Row="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
        <TextBlock x:Name="DexterityResult"
            Grid.Column="2"
            Grid.Row="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="100"
            Height="30"
            Text="20"/>
        <TextBlock Text="Inteligence"
            Grid.Column="3"
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
        <TextBlock x:Name="InteligenceResult"
            Grid.Column="4"
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="100"
            Height="30"
            Text="35"/>
        <TextBlock Text="Vitality"
            Grid.Column="3"
            Grid.Row="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
        <TextBlock x:Name="VitalityResult"
            Grid.Column="4"
            Grid.Row="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="100"
            Height="30"
            Text="15"/>
        <Button x:Name="CreateCharacterBTN"
            Content="Create character"
            Width="200"
            Height="30"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Grid.Row="4"
            Click="CreateCharacterBTN_Click"/>
        <Button x:Name="BackBTN"
            Content="Back"
            Width="100"
            Height="30"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Grid.Row="5"
            Click="BackBTN_Click"/>
    </Grid>
</Page>
